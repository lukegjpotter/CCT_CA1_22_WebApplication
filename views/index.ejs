<!DOCTYPE html>
<html>
<head>
    <title>Pokémon Reviews</title>
</head>
<body>
    <h1>Welcome to Pokémon Reviews!</h1>
    <form action="/search" method="post">
    <input type="text" name="searchTerm" placeholder="Enter a game name" required>
        <button type="submit">Search</button>
    </form>

    <% if (searchResults.length != 0) { %>
        <h2>Search Results for: <%- searchTerm %></h2>
        <ul>
            <% searchResults.forEach(function(pokemonGameReview) { %>
                <li><%= pokemonGameReview.game %></li>
            <% }); %>
        </ul>
    <% } %>

    <h2>All Game Reviews:</h2>
    <% if (pokemonGameReviews.length === 0) { %>
        <p>No reviews available. Hopefully we have not been SQL Injected.</p>
    <% } else { %>
        <p>We have <%= pokemonGameReviews.length %> reviews in our Database.</p>

        <table>
            <thead>
                <th>Game</th><th>Summary</th>
            </thead><tbody>
                <% pokemonGameReviews.forEach(function(pokemonGameReview) { %>
                    <tr><td><%= pokemonGameReview.game %></td>
                    <td><%= pokemonGameReview.summary %></td></tr>
                <% }); %>
            </tbody>
        </table>
  <% } %>

    </body>
</html>